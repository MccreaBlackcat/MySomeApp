<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_slidingmenu_left"
    tools:context="com.timestudio.mynews.activity.LoginMenuActivity">

    <ImageView
        android:id="@+id/iv_login_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/biz_pc_main_info_profile_avatar_bg_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/tv_have_problem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:text="@string/loginmenu_problem"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv_login_test"
        android:text="@string/loginmenu_loginNow"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_login_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <LinearLayout
        android:id="@+id/ll_share"
        android:orientation="horizontal"
        android:background="@mipmap/share_little_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:layout_above="@+id/tv_have_problem"
        android:layout_centerHorizontal="true">

        <ImageView
            android:src="@mipmap/addimport_qq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <ImageView
            android:src="@mipmap/fun_share_weixin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@mipmap/fun_share_weibo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@mipmap/fun_share_friends"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>
